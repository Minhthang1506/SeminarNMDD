<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".TipsCal">

    <data>
        <variable name="calc" type="com.example.studentmanagerbindingdemo.livaData.CalsModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="DEMO"
            android:layout_marginTop="170dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="40dp"
            android:background="@drawable/round_corner"
            android:textColor="@color/black"
            android:textColorHint="@color/teal_200"/>

        <EditText
            android:id="@+id/AmountEditer"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="79dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:hint="Nhập số tiền"
            android:inputType="number"
            android:text="@={calc.amount}"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <SeekBar
                android:id="@+id/PercentBar"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_row="1"
                android:layout_column="0"
                android:progress="@={calc.percent}"
                android:layout_marginLeft="70dp"
                android:background="@drawable/round_corner"/>

            <TextView
                android:id="@+id/PercentView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_row="1"
                android:layout_column="1"
                android:text="@{String.valueOf(calc.percent)}"
                android:textSize="30dp"
                android:layout_marginLeft="6dp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_marginLeft="3dp"
                android:text="%"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_row="2"
                android:layout_column="0"
                android:text="Tiền Tip:"
                android:textSize="24dp"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:id="@+id/TipsView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@{String.valueOf( Integer.valueOf( Integer.valueOf(calc.amount) * calc.percent / 100 ))}"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Tổng cộng:"
                android:textSize="24dp"
                android:layout_marginLeft="8dp"
                android:textAlignment="center"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/TotalView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@{String.valueOf(Integer.valueOf( Integer.valueOf(calc.amount) * calc.percent / 100 ) + Integer.valueOf(calc.amount))}"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:textAlignment="center"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>
</layout>
